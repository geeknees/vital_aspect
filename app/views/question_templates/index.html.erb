<% content_for :title, t('question_templates.index_title') %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-3xl font-bold text-gray-900"><%= t('question_templates.index_title') %></h1>
      <%= link_to t('question_templates.new'), new_organization_question_template_path(@organization), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
    </div>

    <div class="bg-white shadow rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('question_templates.text') %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('question_templates.question_type') %></th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @question_templates.each do |template| %>
            <tr>
              <td class="px-6 py-4 whitespace-normal text-sm text-gray-900"><%= template.content %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= t("questions.type." + template.question_type) %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to t('question_templates.edit'), edit_organization_question_template_path(@organization, template), class: "text-blue-600 hover:text-blue-900" %>
                <%= link_to t('question_templates.delete'), organization_question_template_path(@organization, template), method: :delete, data: { turbo_confirm: t('common.delete_confirmation') }, class: "ml-3 text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
          <% if @question_templates.empty? %>
            <tr>
              <td colspan="3" class="px-6 py-4 text-sm text-gray-500"><%= t('evaluation_participants.no_available_users') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
